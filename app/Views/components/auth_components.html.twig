{% macro message_box() %}
{% set error = session('error') %}
{% set message = session('message') %}
{% if session().has('error') or session.has('message') %}
<div
  class="{{ session().has('error') ? 'text-red-500 bg-red-100 border-red-500' : 'text-emerald-700 bg-emerald-50 border-emerald-500' }} px-4 py-2 border rounded-lg">
  {{ error ?? message }}
</div>
{% endif %}
{% endmacro %}